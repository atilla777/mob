<% if @comment.errors.present? %>
  <% @comment.errors.full_messages.each do | message | %>
    $('#edit_comment_' + <%= @comment.id %> + '_errors').html('<%= j message %>');
  <% end %>
  $('form#edit_comment_' + <%= @comment.id %> + ' #comment_body').val('<%= @stored_body %>');
<% else %>
  $('#comments').html("<%= j render(partial: 'comments') %>");
  hideEditComment();
<% end %>
